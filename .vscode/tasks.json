{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Virtual Environment",
            "type": "shell",
            "command": "python -m venv .venv",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": true
            }
        },
        {
            "label": "Activate Virtual Environment",
            "type": "shell",
            "command": ".venv\\Scripts\\activate.bat",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": true
            }
        },
        {
            "label": "Install Requirements",
            "type": "shell",
            "command": "pip install -r requirements.txt",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": true
            }
        },
        {
            "label": "Alembic Upgrade Head",
            "type": "shell",
            "command": "cd app && alembic upgrade head",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": true
            }
        }
    ]
}